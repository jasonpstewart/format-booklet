{
  "name": "pdf-booklet-formatter",
  "version": "1.0.0",
  "description": "A single-page web application that reorders PDF pages for bifold booklet printing",
  "main": "dist/index.html",
  "homepage": "https://jasonpstewart.github.io/format-booklet",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "start": "webpack serve --mode=development",
    "serve": "npx http-server dist",
    "clean": "rm -rf dist",
    "test": "npx tsx src/test.ts",
    "deploy": "npm run build && echo 'Deploy dist/ folder to your preferred static hosting service'"
  },
  "keywords": [
    "pdf",
    "booklet",
    "printing",
    "page-reorder",
    "client-side",
    "static-web-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonpstewart/format-booklet.git"
  },
  "bugs": {
    "url": "https://github.com/jasonpstewart/format-booklet/issues"
  }
}